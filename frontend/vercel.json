{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://expense-tracker-api.onrender.com/api/:path*"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://expense-tracker-api.onrender.com"
  },
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev"
} 